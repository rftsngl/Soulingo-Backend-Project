# ============================================================================
# Soulingo Backend API - .gitignore
# ============================================================================
# Optimized for Rails 8.0 + PostgreSQL + Ruby 3.2.9
# Purpose: Minimize repository size while keeping it fully functional
# ============================================================================

# See https://help.github.com/articles/ignoring-files for more about ignoring files.
#
# Temporary files generated by your text editor or operating system
# belong in git's global ignore instead:
# `$XDG_CONFIG_HOME/git/ignore` or `~/.config/git/ignore`

# ============================================================================
# 1. BUNDLER & RUBY DEPENDENCIES
# ============================================================================

# Ignore bundler config and installed gems
/.bundle
/vendor/bundle/
/vendor/cache/

# Ignore RubyGems lock file (keep Gemfile.lock for production consistency)
# Gemfile.lock should be committed for applications, ignored for gems

# ============================================================================
# 2. ENVIRONMENT & SECRET FILES
# ============================================================================

# Ignore all environment files (contains sensitive data)
/.env
/.env.*
/.env.local
/.env.*.local

# Ignore master key for decrypting credentials
/config/master.key

# Ignore all credential keys
/config/credentials/*.key

# Ignore any secret files
/config/secrets.yml
*.secret

# ============================================================================
# 3. LOG FILES
# ============================================================================

# Ignore all logfiles but keep the directory
/log/*
!/log/.keep
*.log

# Ignore Rails server logs
/log/*.log
/log/development.log
/log/test.log
/log/production.log

# ============================================================================
# 4. TEMPORARY FILES & CACHE
# ============================================================================

# Ignore all temporary files
/tmp/*
!/tmp/.keep
!/tmp/pids/
!/tmp/pids/.keep
!/tmp/cache/
!/tmp/cache/.keep
!/tmp/sockets/
!/tmp/sockets/.keep
!/tmp/storage/
!/tmp/storage/.keep

# Ignore PID files
/tmp/pids/*
!/tmp/pids/.keep

# Ignore cache files
/tmp/cache/*
!/tmp/cache/.keep

# Ignore socket files
/tmp/sockets/*
!/tmp/sockets/.keep

# Ignore temporary storage
/tmp/storage/*
!/tmp/storage/.keep

# Ignore editor temporary files
*.swp
*.swo
*~
*.tmp
*.bak
*.orig

# ============================================================================
# 5. STORAGE & UPLOADS
# ============================================================================

# Ignore storage (uploaded files in development)
/storage/*
!/storage/.keep

# Ignore Active Storage files
/storage/**/*
!/storage/.keep

# ============================================================================
# 6. DATABASE FILES
# ============================================================================

# Ignore SQLite databases (if used for development/test)
*.sqlite
*.sqlite3
*.sqlite3-*
*.sqlite3-journal
*.sqlite3-shm
*.sqlite3-wal

# Ignore PostgreSQL dumps
*.dump
*.sql
*.psql

# Ignore database schema cache
/db/schema_cache.yml
/db/*.sqlite3
/db/*.sqlite3-*

# ============================================================================
# 7. TEST COVERAGE & REPORTS
# ============================================================================

# Ignore test coverage reports
/coverage/
/coverage.data
/.coverage
/htmlcov/

# Ignore SimpleCov coverage
/coverage/*
!/coverage/.resultset.json.lock

# Ignore RSpec failure tracking
/spec/examples.txt

# ============================================================================
# 8. DOCUMENTATION
# ============================================================================

# Ignore generated documentation
/doc/
/rdoc/
/.yardoc/
/.yard/
/yard/

# Ignore API documentation (if auto-generated)
# Keep openapi.yml and swagger.html as they are source files

# ============================================================================
# 9. NODE.JS & FRONTEND (if applicable)
# ============================================================================

# Ignore Node modules
/node_modules/
/npm-debug.log*
/yarn-debug.log*
/yarn-error.log*

# Ignore package manager files
/.pnp
/.pnp.js

# Ignore Yarn integrity file
/.yarn-integrity

# ============================================================================
# 10. IDE & EDITOR FILES
# ============================================================================

# VSCode
/.vscode/
*.code-workspace

# RubyMine / IntelliJ IDEA
/.idea/
*.iml
*.ipr
*.iws
.idea_modules/

# Sublime Text
*.sublime-project
*.sublime-workspace

# Vim
*.swp
*.swo
*~

# Emacs
*~
\#*\#
/.emacs.desktop
/.emacs.desktop.lock
*.elc

# TextMate
*.tmproj
*.tmproject
tmtags

# ============================================================================
# 11. OPERATING SYSTEM FILES
# ============================================================================

# macOS
.DS_Store
.AppleDouble
.LSOverride
._*
.DocumentRevisions-V100
.fseventsd
.Spotlight-V100
.TemporaryItems
.Trashes
.VolumeIcon.icns
.com.apple.timemachine.donotpresent
.AppleDB
.AppleDesktop
Network Trash Folder
Temporary Items
.apdisk

# Windows
Thumbs.db
Thumbs.db:encryptable
ehthumbs.db
ehthumbs_vista.db
*.stackdump
[Dd]esktop.ini
$RECYCLE.BIN/
*.cab
*.msi
*.msix
*.msm
*.msp
*.lnk

# Linux
.directory
.Trash-*
.nfs*

# ============================================================================
# 12. RAILS SPECIFIC
# ============================================================================

# Ignore Spring files
/spring/*.pid

# Ignore bootsnap cache
/tmp/bootsnap*
/tmp/bootsnap-compile-cache*
/tmp/bootsnap-load-path-cache*

# Ignore Rails credentials (encrypted files are OK, keys are not)
# /config/credentials.yml.enc  # This should be committed
# /config/credentials/*.yml.enc  # This should be committed

# Ignore Solid Cache, Queue, Cable databases (development/test only)
/db/solid_cache_development.sqlite3
/db/solid_cache_test.sqlite3
/db/solid_queue_development.sqlite3
/db/solid_queue_test.sqlite3
/db/solid_cable_development.sqlite3
/db/solid_cable_test.sqlite3

# ============================================================================
# 13. DEPLOYMENT & DOCKER
# ============================================================================

# Ignore Docker volumes
/docker-volumes/

# Ignore Kamal deployment files (keep deploy.yml)
/.kamal/

# ============================================================================
# 14. SECURITY & SENSITIVE DATA
# ============================================================================

# Ignore any files containing sensitive data
*.pem
*.key
*.cert
*.crt
*.p12
*.pfx

# Ignore SSH keys
id_rsa
id_rsa.pub
id_dsa
id_dsa.pub

# Ignore AWS credentials
.aws/

# ============================================================================
# 15. MISCELLANEOUS
# ============================================================================

# Ignore ctags
tags
TAGS

# Ignore pow configuration
.powrc
.powder

# Ignore RVM files
.rvmrc
.ruby-version.lock
.ruby-gemset

# Ignore rbenv files (keep .ruby-version for version specification)
# .ruby-version  # This should be committed

# Ignore Byebug history
.byebug_history

# Ignore IRB/Pry history
.irb_history
.pry_history

# Ignore repl history
.repl_history

# Ignore local configuration overrides
/config/database.yml.local
/config/cable.yml.local
/config/storage.yml.local

# ============================================================================
# END OF .gitignore
# ============================================================================
